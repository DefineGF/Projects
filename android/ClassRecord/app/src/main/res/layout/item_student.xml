<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/item_student_bg"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/item_tv_name"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="name"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_tv_grade"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="grade"
            android:background="@drawable/item_student_border"/>

        <TextView
            android:id="@+id/item_tv_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_tv_grade"
            android:layout_alignTop="@id/item_tv_grade"
            android:layout_alignBottom="@id/item_tv_grade"
            android:hint="物理"
            android:gravity="center"
            android:background="@drawable/item_student_border"/>

        <TextView
            android:id="@+id/item_tv_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tv_grade"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@id/item_tv_grade"
            android:background="@drawable/item_student_border"
            android:text="decribe"
            android:gravity="center"/>

    </RelativeLayout>

</LinearLayout>